/**index.wxss**/

.content {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding-top: 30rpx;
  background-color: #999;

}
.screen{
  width: 720rpx;
  height: 100rpx;
  border: 1rpx solid #eee;
  border-radius: 3px;
  background-color: #fff;
  line-height: 100rpx;
  text-align: right;
  padding-right: 10rpx;
  margin-bottom: 30rpx;
  color: #000;
}
.btnGroup{
  display: flex;
  flex-direction: row;

}
.item {
  width: 160rpx;
  min-height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  margin: 10rpx;
  text-shadow: 0 1px 1px rgba(0,0,0,.3);
}
.orange {
  color: #fff;
  background: orange;
  border-radius: 10rpx;
  border: 1px solid #eee;
}
.blue {
  background: lightsteelblue;
  border-radius: 10rpx;
  border: 1px solid #eee;
}